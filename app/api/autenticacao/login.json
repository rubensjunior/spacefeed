{
  "meta": {
    "options": {
      "linkedFile": "/views/index.ejs",
      "linkedForm": "login_form"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "email",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Por favor, informe seu email"
            },
            "core:email": {
              "message": "Por favor, informe um email v√°lido"
            }
          }
        },
        "name": "email"
      },
      {
        "type": "text",
        "fieldName": "password",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Por favor, informe sua senha"
            }
          }
        },
        "name": "password"
      }
    ]
  },
  "exec": {
    "steps": {
      "name": "identity",
      "module": "auth",
      "action": "login",
      "options": {
        "provider": "auth",
        "username": "{{$_POST.email}}"
      },
      "output": true,
      "meta": []
    }
  }
}