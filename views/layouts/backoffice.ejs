<!doctype html>
<html lang="pt">

<head>
  <base href="/">
  <script src="/dmxAppConnect/dmxAppConnect.js"></script>
  <meta charset="UTF-8">
  <title>Backoffice</title>

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/bootstrap/5/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="/dmxAppConnect/dmxRouting/dmxRouting.js" defer></script>
</head>

<body is="dmx-app" id="backoffice" class="navbar-gradient min-vh-100">
  <header class="mb-3">
    <!-- Top Navbar -->
    <nav class="navbar navbar-backoffice navbar-top">
      <div class="container">
        <!-- Logo and Company Selector Group -->
        <div class="d-flex align-items-center gap-3">
          <a class="navbar-brand" href="/">
            <img src="/assets/images/spacefeed-white.png" alt="Logo" class="img-fluid">
          </a>
          <select class="form-select" id="company_selector">
            <option value="">Selecione a Empresa</option>
            <option value="1">Empresa 1</option>
            <option value="2">Empresa 2</option>
            <option value="3">Empresa 3</option>
          </select>
          <button id="btn1" class="btn btn-warning"><i class="fas fa-plus"></i></button>
        </div>

        <!-- User Profile -->
        <div class="dropdown user-profile-dropdown">
          <div class="d-flex align-items-center text-white user-profile-trigger" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="rounded-circle overflow-hidden me-2" style="width: 40px; height: 40px;">
              <img src="https://via.placeholder.com/80" alt="User Avatar" class="img-fluid">
            </div>
            <span class="me-2">John Doe</span>
            <i class="fas fa-chevron-down"></i>
          </div>

          <div class="dropdown-menu dropdown-menu-end p-0" style="width: 280px;">
            <div class="card border-0">
              <div class="card-body p-3">
                <div class="d-flex align-items-center mb-3">
                  <div class="rounded-circle overflow-hidden me-3" style="width: 64px; height: 64px;">
                    <img src="https://via.placeholder.com/128" alt="User Avatar" class="img-fluid">
                  </div>
                  <div>
                    <h6 class="mb-1">John Doe</h6>
                    <p class="text-muted mb-0 small">john.doe@example.com</p>
                  </div>
                </div>

                <div class="list-group list-group-flush">
                  <a href="/profile" class="list-group-item list-group-item-action border-0 px-0">
                    <i class="fas fa-user-edit me-2"></i>Editar Perfil
                  </a>
                  <a href="/reset-password" class="list-group-item list-group-item-action border-0 px-0">
                    <i class="fas fa-key me-2"></i>Recuperar Senha
                  </a>
                  <a href="/logout" class="list-group-item list-group-item-action border-0 px-0 text-danger">
                    <i class="fas fa-sign-out-alt me-2"></i>Sair
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <!-- Bottom Navbar -->
    <nav class="navbar navbar-expand-md navbar-dark navbar-backoffice navbar-bottom">
      <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-bars text-white"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarMenu">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item mb-2 mb-md-0">
              <a class="nav-link active px-3" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item mb-2 mb-md-0">
              <a class="nav-link px-3" href="/users">Usuários</a>
            </li>
            <li class="nav-item mb-2 mb-md-0">
              <a class="nav-link px-3" href="/products">Produtos</a>
            </li>
            <li class="nav-item mb-2 mb-md-0">
              <a class="nav-link px-3" href="/reports">Relatórios</a>
            </li>
          </ul>

          <form class="search-form d-none d-md-flex">
            <div class="position-relative">
              <input class="form-control pe-4" type="search" placeholder="Buscar..." aria-label="Search">
              <i class="fas fa-search position-absolute search-icon"></i>
            </div>
          </form>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content Area -->
  <main class="py-4 container">
    <%- await include(content, locals); %>
  </main>

  <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>